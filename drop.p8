--drop
--by olivander65

b_spr=1--basket
p_spr=2--player
p_x=64
p_y=100
fruits={}
f_start=16
f_cnt=5
f_itrvl=16
f_ybnd=128

grav=1
level=1
pt=0


function _init()
 for i=1,level do
 	local fx=flr(rnd(110)+5)
 	fruit={
 		sprite=flr(rnd(f_cnt)+f_start),
 		x=fx,
 		bx=fx,
 		y=i*(-f_itrvl),
 		wv=flr(rnd(10))
 	}
 	add(fruits,fruit)
 end
end

function _update()
	if (btn(0)) p_x-=2
	if (btn(1)) p_x+=2
	if (btn(2)) p_y-=2
	if (btn(3)) p_y+=2

	--bounds
	if (p_x > 120) p_x=120
	if (p_x < 0) p_x=1
	if (p_y > 120) p_y=120
	if (p_y < 0) p_y=1
	
	--fruit
	for fruit in all(fruits) do
		fruit.y+=grav
		fruit.x=fruit.bx+fruit.wv*sin(time())
		if fruit.y+4>p_y-8
		and fruit.y+4<p_y
		and fruit.x+4>p_x
		and fruit.x+4<p_x+8 then
			pt+=1
			del(fruits,fruit)
			sfx(1)
		end
		
		if fruit.y>f_ybnd then
			del(fruits,fruit)
			sfx(0)
		end
	end
	
	
	
	--got all fruit
	if #fruits==0 then
		level+=1
		_init()
	end
	
end

function _draw()
	cls()
	rectfill(0,108,127,127,3)
	spr(p_spr,p_x,p_y)--plyr
	spr(b_spr,p_x,p_y-8)
	
	--fruit
	for fruit in all(fruits) do
		spr(fruit.sprite,fruit.x,fruit.y)
	end
	
	print("score:"..pt)
	print("level:"..level,32,0)
	print("fruit:"..#fruits,64,0)
end
